<p id="notice"><%= notice %></p>

<h1>Livros</h1>

<hr/>
  <%= render 'formbusca' %>
<hr/>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Ano publicacao</th>
      <th>Edicao</th>
      <th>Genero</th>
      <th>Editora</th>
      <th>Autor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @livros.each do |livro| %>
      <tr>
        <td><%= livro.titulo %></td>
        <td><%= livro.ano_publicacao %></td>
        <td><%= livro.edicao %></td>
        <td><%= livro.genero %></td>
        <td><%= livro.editoras_id %></td>
        <td><%= livro.autores_id %></td>

        <td>
          <%= link_to ' ', edit_livro_path(livro),  class: "glyphicon glyphicon-pencil" %>
          <%= link_to ' ', livro, method: :delete, data: { confirm: 'Are you sure?' } , class: "glyphicon glyphicon-trash" %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
